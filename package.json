{
  "name": "@ir/mui-utils",
  "version": "1.0.0",
  "description": "A set of utility components for Material-UI in React applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepare": "npm run build",
    "test": "jest",
    "clean": "rm -rf node_modules dist package-lock.json"
  },
  "keywords": [
    "react",
    "mui",
    "material-ui",
    "utilities"
  ],
  "author": "iRemote, Inc.",
  "license": "MIT",
  "peerDependencies": {
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.12.3",
    "@mui/system": "^5.12.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@storybook/react": "^7.0.20",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^17.0.60",
    "create-tsx": "^0.0.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/assets/**"
    ]
  },
  "jest-junit": {
    "addFileAttribute": "true",
    "outputDirectory": "reports/"
  }
}
